@model IEnumerable<_2_FEBRUARY_TASK.Models.TaskEmployee>


<style>
    #cc {
        display: none;
    }

    #uo {
        display: none;
    }
</style>
@{
    ViewBag.Title = "Index";
    if (ViewBag.SearchString != null)
    {
        <style>
            #uu {
                display: none;
            }

            #cc {
                display: block;
                text-align: center;
            }

            #uo {
                display: block;
                text-align: center;
            }
        </style>
        }
    }

    <h2 style="text-align:center">Employees</h2>
   
    <div class="form-group">
        <div class="input-group">
            @using (Html.BeginForm("Index", "TaskEmployees", FormMethod.Get))
            {
                <input type="text" class="form-control" placeholder="Search by name or job title" name="searchString" value="@ViewBag.CurrentFilter" />
                <div class="input-group-append">
                    <button class="btn btn-secondary" type="submit">
                        Search
                    </button>

                </div>
                   <div class="form-group">
                    <div class="form-check form-check-inline">
                        @Html.RadioButton("searchBy", "First Name", false, new { @class = "form-check-input" })
                        <label class="form-check-label" for="firstNameRadio">First Name</label>
                    </div>
                    <div class="form-check form-check-inline">
                        @Html.RadioButton("searchBy", "Last Name", false, new { @class = "form-check-input" })
                        <label class="form-check-label" for="lastNameRadio">Last Name</label>
                    </div>
                    <div class="form-check form-check-inline">
                        @Html.RadioButton("searchBy", "Email", false, new { @class = "form-check-input" })
                        <label class="form-check-label" for="emailRadio">Email</label>
                    </div>
                </div>
            }
        </div>
    </div>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })

    </p>
    <h1 id="cc">@ViewBag.SearchString</h1>
    <h3 id="uo">
        @Html.ActionLink("Return", "Index", null, new { @class = "btn btn-success" })
    </h3>
    <table class="table" id="uu">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job_Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PdfFile)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.First_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Last_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job_Title)
                </td>
                <td>
                    @if (item.Gender == true)
                    {
                        <span>Male</span>
                    }
                    else
                    {
                        <span>Female</span>
                    }
                </td>
                <td>
                    <img src="../Images/@item.img" style="width:100px;" />
                </td>
                <td>
                    <a href="../TaskEmployees/Download?CV=@item.PdfFile">@item.PdfFile</a>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
